{
  "name": "testing_project",
  "version": "1.0.0",
  "description": "COMP.SE.200 Software testing group work",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "jest --verbose --coverage && coveralls < coverage/lcov.info",
    "test2": "jest --verbose=false"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/*.js",
      "src/{!(.internal/*)}"
    ],
    "reporters": [
      "default",
      ["./node_modules/jest-html-reporter", {
        "pageTitle": "Test Report",
        "includeConsoleLog": true,
        "includeSuiteFailure": true,
        "includeFailureMsg": true
      }]
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "babel-jest": "^29.7.0",
    "coveralls": "^3.1.1",
    "jest-html-reporter": "^3.10.2"
  }
}
