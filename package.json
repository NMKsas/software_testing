{
  "name": "testing_project",
  "version": "1.0.0",
  "description": "COMP.SE.200 Software testing group work",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test":  "jest --verbose --coverage && coveralls < coverage/lcov.info"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true, 
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/*.js",
      "src/{!(.internal/*)}"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "babel-jest": "^29.7.0",
    "coveralls": "^3.1.1"
  }
}
